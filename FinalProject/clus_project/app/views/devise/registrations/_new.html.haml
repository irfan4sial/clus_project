.modal-dialog#signup_form
  .modal-content
    .modal-header
      .modal-title
        = "Sign up"
    .modal-body
      = form_for(resource, as: resource_name,:remote => true ,url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          = f.label :first_name
          %br/
          = f.text_field :first_name
        .field
          = f.label :last_name
          %br/
          = f.text_field :last_name
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true
        .field
          = f.label :password
          - if @validatable
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "off"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "off"
        .field
          = f.radio_button :role_type, 'ceo'
          CEO
        .field
          = f.radio_button :role_type, 'pm'
          PM
        .field
          = f.radio_button :role_type, 'developer'
          Developer
        .actions
          = f.submit "Sign up"
    .modal-footer
      = render "devise/shared/links"
